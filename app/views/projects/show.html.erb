<p id="notice"><%= notice %></p>

<h1>
  <%= @project.name %> - #<%= @project.hashtag %>
</h1>

<p>
  <%= @project.description %>
</p>

<div class="row">
  <% @project.posts.each do |post| %>
    <div class="col-xs-3">
      <!-- <div class="well"> -->
      <div class="thumbnail">
        <%= link_to post do %>
          <%= image_tag post.image, width: 100, class: 'img-responsive' %>
        <% end %>
        <div class="caption">
          <p>
            <%= post.body %>
          </p>
        </div>
      </div>
      <!-- </div> -->
    </div>
  <% end %>
</div>

<%= link_to 'Back', projects_path %>
