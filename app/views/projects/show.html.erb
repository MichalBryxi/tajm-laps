<ol class="breadcrumb">
  <li><%= link_to 'Fetch tweets', fetch_tweets_project_path(@project) %></li>
  <li><%= link_to 'Parse tweets', parse_tweets_project_path(@project) %></li>
  <li><%= link_to 'Back', projects_path %></li>
</ol>

<h1>
  <%= @project.name %> - #<%= @project.hashtag %>
</h1>

<p>
  <%= @project.description %>
</p>

<div class="row">
  <% @project.posts.pretty.each do |post| %>
    <div class="col-lg-2 col-md-3 col-xs-12">
      <!-- <div class="well"> -->
      <div class="thumbnail">
        <%= link_to post do %>
          <%= image_tag post.image, width: 100, class: 'img-responsive', title: post.uid %>
        <% end %>
        <!--
        <div class="caption">
          <p>
            <%= auto_link(post.body) %>
            <strong>
              via: <%= post.parser_name %>
            </strong>
            <%= link_to "Parse", parse_post_path(post), class: "btn btn-" + (post.image.nil? ? 'danger' : 'success') %>
          </p>
        </div>
        -->
      </div>
      <!-- </div> -->
    </div>
  <% end %>
</div>

