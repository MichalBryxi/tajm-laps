<h1>
  <%= @project.name %> - #<%= @project.hashtag %>
</h1>

<p>
  <%= @project.description %>
</p>

<div class="row">
  <% @project.posts.each do |post| %>
    <div class="col-xs-3">
      <!-- <div class="well"> -->
      <div class="thumbnail">
        <%= link_to post do %>
          <%= image_tag post.image, width: 100, class: 'img-responsive' %>
        <% end %>
        <div class="caption">
          <p>
            <%= auto_link(post.body) %>
            <strong>
              via: <%= post.parser_name %>
            </strong>
            <%= link_to "Parse", parse_post_path(post), class: "btn btn-" + (post.image.nil? ? 'danger' : 'success') %>
          </p>
        </div>
      </div>
      <!-- </div> -->
    </div>
  <% end %>
</div>

<%= link_to 'Back', projects_path %>
