<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>

    <%= f.input :hashtag do %>
      <div class="input-group">
        <span class="input-group-addon">#</span>
        <%= f.input_field :hashtag, class: 'form-control' %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
